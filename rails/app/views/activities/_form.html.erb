<div class="flex justify-around m-12">
  <%= form_with model: activity, html: { class: 'bg-gray-200 rounded border-b' } do |f| %>
    <div class="m-3 mb-6">
      <%= f.label :time, class: 'block text-gray-700 mb-1' %>
      <%= f.time_field :time, value: activity.time.strftime("%H:%M"), class: 'border w-full p-1' %>
    </div>

    <div class="m-3 mb-6">
      <%= f.label :symbol, class: 'block text-gray-700 mb-1' %>
      <%= f.text_field :symbol, class: 'border p-1' %>
    </div>

    <div class="m-3 mb-6">
      <%= f.label :note, class: 'block text-gray-700 mb-1' %>
      <%= f.text_field :note, class: 'border p-1' %>
    </div>

    <div class="flex justify-around m-3">
      <%= f.submit class: 'bg-gray-800 text-white rounded px-4 py-1' %>
    </div>
  <% end %>
</div>
